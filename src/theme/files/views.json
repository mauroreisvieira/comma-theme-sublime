[
    {
        "class": "minimap_control",
        "settings": ["always_show_minimap_viewport"],
        "viewport_color": "color(var(accent) a(0.2))",
        "viewport_opacity": "var(minimapOpacity)"
    },
    {
        "class": "minimap_control",
        "settings": ["!always_show_minimap_viewport"],
        "viewport_opacity": {
            "target": 0.0,
            "speed": 5.0,
            "interpolation": "smoothstep"
        }
    },
    {
        "class": "minimap_control",
        "attributes": ["hover"],
        "settings": ["!always_show_minimap_viewport"],
        "viewport_opacity": {
            "target": 0.4,
            "speed": 20.0,
            "interpolation": "smoothstep"
        }
    }
]
